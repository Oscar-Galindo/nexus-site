---
/**
 * About Photo Section
 * Two-column layout with photo and bio text
 */

export interface Props {
  name: string;
  imageUrl: string;
  paragraphs: string[];
  imagePosition?: 'left' | 'right';
  grayscale?: boolean;
}

const {
  name,
  imageUrl,
  paragraphs,
  imagePosition = 'left',
  grayscale = true,
} = Astro.props;

const isLeft = imagePosition === 'left';
---

<section class="w-full py-24 px-6 md:px-12 bg-white text-black border-t border-neutral-100">
  <div class="max-w-7xl mx-auto grid md:grid-cols-2 gap-12 md:gap-16 items-start">
    
    <!-- Photo -->
    <div class:list={[
      'relative w-full aspect-square bg-neutral-100 rounded-lg overflow-hidden',
      !isLeft && 'md:order-2'
    ]}>
      <img
        src={imageUrl}
        alt={name}
        class:list={[
          'w-full h-full object-cover',
          grayscale && 'filter grayscale contrast-125'
        ]}
      />
    </div>

    <!-- Content -->
    <div class:list={[
      'flex flex-col justify-center h-full pt-8 md:pt-0',
      !isLeft && 'md:order-1'
    ]}>
      <h2 class="text-3xl md:text-4xl font-semibold mb-8 tracking-tight text-black">
        {name}
      </h2>
      <div class="text-lg font-body leading-relaxed text-neutral-600 space-y-6 font-normal">
        {paragraphs.map((p) => <p>{p}</p>)}
      </div>
    </div>
  </div>
</section>
