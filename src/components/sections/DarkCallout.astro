---
/**
 * Dark Callout Section
 * Full-width dark section with headline and optional subheadline
 */

export interface Props {
  headline: string;
  subheadline?: string;
}

const { headline, subheadline } = Astro.props;

// Split headline at <br> for line breaks
const headlineParts = headline.split('<br>').map(s => s.trim());
---

<section class="w-full py-24 md:py-32 px-6 md:px-12 bg-black text-white">
  <div class="max-w-4xl mx-auto">
    <h2 class="text-4xl md:text-6xl font-semibold tracking-tighter leading-tight mb-8">
      {headlineParts.map((part, i) => (
        <>
          {part}
          {i < headlineParts.length - 1 && <br />}
        </>
      ))}
    </h2>
    
    {subheadline && (
      <p class="text-xl md:text-2xl text-neutral-400 font-body font-light leading-relaxed max-w-2xl">
        {subheadline}
      </p>
    )}
  </div>
</section>
