---
/**
 * FAQ List Section
 * Non-accordion list format used on FAQ page
 */

export interface FAQItem {
  question: string;
  answer: string;
}

export interface Props {
  items: FAQItem[];
}

const { items } = Astro.props;
---

<section class="w-full py-24 px-6 md:px-12 bg-white text-black border-t border-neutral-100">
  <div class="max-w-4xl mx-auto">
    {items.map((faq) => (
      <div class="py-8 border-b border-neutral-100">
        <h3 class="text-xl md:text-2xl font-semibold tracking-tight text-black mb-4">
          {faq.question}
        </h3>
        <p class="text-lg font-light font-body text-neutral-600 leading-relaxed">
          {faq.answer}
        </p>
      </div>
    ))}
  </div>
</section>
