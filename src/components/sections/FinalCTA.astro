---
/**
 * Final CTA Section
 * Bottom-of-page call to action with optional subtext
 */

export interface Props {
  headline: string;
  subheadline?: string;
  ctaText: string;
  ctaUrl: string;
  ctaExternal?: boolean;
  tagline?: string;
  variant?: 'light' | 'dark';
}

const {
  headline,
  subheadline,
  ctaText,
  ctaUrl,
  ctaExternal = true,
  tagline,
  variant = 'light',
} = Astro.props;

const isDark = variant === 'dark';
---

<section class:list={[
  'w-full py-24 px-6 md:px-12 flex flex-col items-center justify-center text-center',
  isDark
    ? 'bg-black text-white border-t border-neutral-900'
    : 'bg-neutral-50 text-black border-t border-neutral-200'
]}>
  <div class="max-w-4xl mx-auto">
    
    <!-- Headline -->
    <h2 class:list={[
      'text-4xl md:text-5xl font-semibold tracking-tight mb-10',
      isDark ? 'text-white' : 'text-black'
    ]}>
      {headline}
    </h2>

    <!-- Subheadline -->
    {subheadline && (
      <p class:list={[
        'text-lg mb-10 font-body font-light',
        isDark ? 'text-neutral-400' : 'text-neutral-600'
      ]}>
        {subheadline}
      </p>
    )}

    <!-- CTA Button -->
    <a
      href={ctaUrl}
      target={ctaExternal ? '_blank' : undefined}
      rel={ctaExternal ? 'noopener noreferrer' : undefined}
      class:list={[
        'inline-flex items-center justify-center px-10 py-5 text-lg font-medium rounded-lg shadow-xl hover:shadow-2xl hover:-translate-y-1 transition-all duration-300',
        isDark
          ? 'bg-white text-black hover:bg-neutral-200'
          : 'bg-black text-white hover:bg-neutral-800'
      ]}
    >
      {ctaText} <span class="ml-2">â†’</span>
    </a>

    <!-- Tagline -->
    {tagline && (
      <p class:list={[
        'mt-12 text-lg font-medium uppercase tracking-wide',
        isDark ? 'text-neutral-500' : 'text-neutral-400'
      ]}>
        {tagline}
      </p>
    )}
  </div>
</section>
