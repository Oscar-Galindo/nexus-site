---
/**
 * Limited Capacity Section
 * Centered section highlighting exclusivity
 */

export interface Props {
  headline: string;
  text: string;
}

const { headline, text } = Astro.props;
---

<section class="w-full py-24 px-6 md:px-12 bg-white text-black border-t border-neutral-100">
  <div class="max-w-4xl mx-auto text-center">
    <h2 class="text-3xl md:text-4xl font-semibold mb-8 tracking-tight text-black">
      {headline}
    </h2>
    <p class="text-lg md:text-xl font-body font-light leading-relaxed text-neutral-600 max-w-2xl mx-auto">
      {text}
    </p>
  </div>
</section>
