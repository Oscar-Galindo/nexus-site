---
/**
 * Resume Section
 * Dark section with headline, subheadline, and two-column lists
 */

export interface ResumeItem {
  text: string;
  highlight?: boolean;
}

export interface Props {
  label?: string;
  headline: string;
  subheadline?: string;
  leftTitle: string;
  leftItems: ResumeItem[];
  rightTitle: string;
  rightItems: ResumeItem[];
}

const {
  label,
  headline,
  subheadline,
  leftTitle,
  leftItems,
  rightTitle,
  rightItems,
} = Astro.props;
---

<section class="w-full py-24 md:py-32 px-6 md:px-12 bg-black text-white border-t border-neutral-900">
  <div class="max-w-7xl mx-auto">
    
    <!-- Header -->
    <div class="max-w-3xl mb-20">
      {label && (
        <p class="text-sm font-medium uppercase tracking-wide text-neutral-400 mb-4">
          {label}
        </p>
      )}
      <h2 class="text-4xl md:text-6xl font-semibold mb-8 tracking-tighter leading-tight text-white">
        {headline}
      </h2>
      {subheadline && (
        <p class="text-xl md:text-2xl text-neutral-400 font-body font-light leading-relaxed">
          {subheadline}
        </p>
      )}
    </div>

    <!-- Two Columns -->
    <div class="grid md:grid-cols-2 gap-12 md:gap-12 border-t border-neutral-800 pt-16">
      
      <!-- Left Column -->
      <div>
        <h3 class="text-2xl font-bold mb-8 text-white tracking-tight">{leftTitle}</h3>
        <ul class="space-y-4 font-body text-lg text-neutral-300">
          {leftItems.map((item) => (
            <li class="flex items-start gap-3">
              <iconify-icon
                icon="solar:check-circle-linear"
                width="24"
                class:list={['shrink-0 mt-0.5', item.highlight ? 'text-white' : 'text-neutral-500']}
              ></iconify-icon>
              <span class:list={[item.highlight && 'text-white font-medium']}>
                {item.text}
              </span>
            </li>
          ))}
        </ul>
      </div>

      <!-- Right Column -->
      <div>
        <h3 class="text-2xl font-bold mb-8 text-white tracking-tight">{rightTitle}</h3>
        <ul class="space-y-4 font-body text-lg text-neutral-300">
          {rightItems.map((item) => (
            <li class="flex items-start gap-3">
              <iconify-icon
                icon="solar:check-circle-linear"
                width="24"
                class:list={['shrink-0 mt-0.5', item.highlight ? 'text-white' : 'text-neutral-500']}
              ></iconify-icon>
              <span class:list={[item.highlight && 'text-white font-medium']}>
                {item.text}
              </span>
            </li>
          ))}
        </ul>
      </div>
    </div>
  </div>
</section>
