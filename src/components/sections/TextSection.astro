---
/**
 * Text Section
 * Simple section with title and paragraph text
 */

export interface Props {
  title?: string;
  text: string;
  centered?: boolean;
}

const { title, text, centered = false } = Astro.props;
---

<section class="w-full py-24 px-6 md:px-12 bg-white text-black border-t border-neutral-100">
  <div class:list={['max-w-4xl mx-auto', centered && 'text-center']}>
    {title && (
      <h2 class="text-3xl md:text-4xl font-semibold mb-16 tracking-tight text-black">
        {title}
      </h2>
    )}
    <p class="text-xl font-light font-body text-neutral-600 leading-relaxed">
      {text}
    </p>
  </div>
</section>
