---
/**
 * Two Column Comparison Section
 * Used for "I Own" vs "You Own", "For You" vs "Not For You"
 */

export interface ComparisonItem {
  text: string;
  highlight?: boolean;
}

export interface Props {
  title?: string;
  leftTitle: string;
  leftIcon: string;
  leftItems: ComparisonItem[];
  leftIconBg?: 'dark' | 'light';
  rightTitle: string;
  rightIcon: string;
  rightItems: ComparisonItem[];
  rightIconBg?: 'dark' | 'light';
  variant?: 'light' | 'dark';
}

const {
  title,
  leftTitle,
  leftIcon,
  leftItems,
  leftIconBg = 'dark',
  rightTitle,
  rightIcon,
  rightItems,
  rightIconBg = 'light',
  variant = 'light',
} = Astro.props;

const isDark = variant === 'dark';
---

<section class:list={[
  'w-full py-24 md:py-32 px-6 md:px-12',
  isDark ? 'bg-black text-white border-t border-neutral-900' : 'bg-white border-t border-neutral-100'
]}>
  <div class="max-w-7xl mx-auto">
    
    {title && (
      <h2 class:list={[
        'text-3xl md:text-4xl font-semibold mb-20 tracking-tight text-center md:text-left',
        isDark ? 'text-white' : 'text-black'
      ]}>
        {title}
      </h2>
    )}

    <div class="grid md:grid-cols-2 gap-12 md:gap-24 relative">
      
      <!-- Vertical Divider -->
      <div class:list={[
        'hidden md:block absolute left-1/2 top-0 bottom-0 w-px -translate-x-1/2',
        isDark ? 'bg-neutral-800' : 'bg-neutral-200'
      ]}></div>

      <!-- Left Column -->
      <div class="flex flex-col gap-8">
        <div class="flex items-center gap-3 mb-2">
          <div class:list={[
            'p-2 rounded-lg',
            leftIconBg === 'dark' ? 'bg-black text-white' : 'bg-white border border-neutral-200 text-black'
          ]}>
            <iconify-icon icon={leftIcon} width="24" class="block"></iconify-icon>
          </div>
          <h3 class:list={[
            'text-2xl font-bold tracking-tight',
            isDark ? 'text-white' : 'text-black'
          ]}>
            {leftTitle}
          </h3>
        </div>

        <ul class="space-y-6">
          {leftItems.map((item) => (
            <li class="flex items-start gap-4">
              <iconify-icon
                icon={item.highlight ? 'solar:star-circle-linear' : 'solar:check-circle-linear'}
                width="20"
                class:list={[
                  'mt-1 shrink-0',
                  item.highlight
                    ? (isDark ? 'text-white' : 'text-black')
                    : (isDark ? 'text-neutral-500' : 'text-black')
                ]}
              ></iconify-icon>
              <span class:list={[
                'text-lg font-body',
                item.highlight
                  ? (isDark ? 'text-white font-semibold' : 'text-black font-semibold')
                  : (isDark ? 'text-neutral-300' : 'text-neutral-800 font-medium')
              ]}>
                {item.text}
              </span>
            </li>
          ))}
        </ul>
      </div>

      <!-- Right Column -->
      <div class="flex flex-col gap-8">
        <div class="flex items-center gap-3 mb-2">
          <div class:list={[
            'p-2 rounded-lg',
            rightIconBg === 'dark'
              ? (isDark ? 'bg-neutral-900 border border-neutral-800 text-neutral-500' : 'bg-black text-white')
              : (isDark ? 'bg-neutral-900 border border-neutral-800 text-neutral-500' : 'bg-white border border-neutral-200 text-black')
          ]}>
            <iconify-icon icon={rightIcon} width="24" class="block"></iconify-icon>
          </div>
          <h3 class:list={[
            'text-2xl font-bold tracking-tight',
            isDark ? 'text-neutral-500' : 'text-neutral-500'
          ]}>
            {rightTitle}
          </h3>
        </div>

        <ul class="space-y-6">
          {rightItems.map((item) => (
            <li class:list={[
              'flex items-start gap-4',
              !item.highlight && 'opacity-60'
            ]}>
              <iconify-icon
                icon="solar:check-circle-linear"
                width="20"
                class:list={[
                  'mt-1 shrink-0',
                  isDark ? 'text-neutral-500' : 'text-neutral-400'
                ]}
              ></iconify-icon>
              <span class:list={[
                'text-lg font-body',
                isDark ? 'text-neutral-500' : 'text-neutral-600'
              ]}>
                {item.text}
              </span>
            </li>
          ))}
        </ul>
      </div>
    </div>
  </div>
</section>
