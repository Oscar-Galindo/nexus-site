---
/**
 * About Page
 * The Operator Behind the Ownership
 */

import BaseLayout from '@/layouts/BaseLayout.astro';
import Navigation from '@/components/global/Navigation.astro';
import SiteFooter from '@/components/global/SiteFooter.astro';
import PageHero from '@/components/sections/PageHero.astro';
import TextSection from '@/components/sections/TextSection.astro';
import FeatureCardsGrid from '@/components/sections/FeatureCardsGrid.astro';
import AboutPhoto from '@/components/sections/AboutPhoto.astro';
import ResumeSection from '@/components/sections/ResumeSection.astro';
import LimitedCapacity from '@/components/sections/LimitedCapacity.astro';
import TwoColumnComparison from '@/components/sections/TwoColumnComparison.astro';
import FinalCTA from '@/components/sections/FinalCTA.astro';

// Page content - TODO: Move to Contentful
const pageContent = {
  seo: {
    title: 'About | Online Nexus Marketing',
    description: 'The operator behind the ownership. Digital infrastructure management.',
  },
  hero: {
    headline: 'The Operator Behind<br>the Ownership',
    subheadline: 'You submit it once. I own it from there.',
    ctaText: 'Book a Call',
    ctaUrl: 'https://calendly.com/onlinenexusmarketing/strategy-meeting',
  },
  reality: {
    text: "You didn't start your organization to manage vendors, chase developers, or debug email workflows. But here you are — juggling tools, coordinating people, and following up on things that should just be done. Every \"quick question\" lands on your plate. Every update waits on you to push it forward.",
  },
  howWeWork: {
    title: 'One Portal. One Person. No Chaos.',
    cards: [
      {
        icon: 'solar:door-open-linear',
        title: 'One Place',
        description: 'Requests, files, and chat — all in your portal. No scattered emails.',
      },
      {
        icon: 'solar:user-circle-linear',
        title: 'One Person',
        description: "You're not passed around. I see it. I handle it.",
      },
      {
        icon: 'solar:bell-bing-linear',
        title: 'Real Updates',
        description: "When I'm on it, you'll know. No wondering. No chasing.",
      },
    ],
  },
  about: {
    name: 'Oscar Galindo',
    imageUrl: 'https://res.cloudinary.com/dhs9d8tou/image/upload/v1768967465/DSC07006_mh1pnc.jpg',
    paragraphs: [
      "I've spent my career inside digital operations — not advising from the outside, but owning the systems that keep organizations running.",
      "I've been the in-house engineer, the external consultant, and the fractional operator. Now I do one thing: take full ownership of your digital infrastructure so you never have to think about it again.",
    ],
  },
  resume: {
    label: "The Résumé You Don't Need to Read",
    headline: "Fortune 500 to First-Time Founders. I've Handled It.",
    subheadline: "Weichert. AbbVie. Dickies. Tatari. UVA Health. Scott Systems. Workforce solutions companies. Nonprofits. Small businesses building from scratch. The scale changes — the work doesn't.",
    leftTitle: "What I've Built",
    leftItems: [
      { text: 'Custom websites and web apps' },
      { text: 'CRM systems and pipelines' },
      { text: 'Email automation workflows' },
      { text: 'Content management systems' },
      { text: 'System integrations' },
    ],
    rightTitle: "How I've Worked",
    rightItems: [
      { text: 'In-house engineer' },
      { text: 'External consultant' },
      { text: 'Fractional operator' },
      { text: 'Full ownership', highlight: true },
    ],
  },
  capacity: {
    headline: "8–10 Organizations. That's It.",
    text: "Ownership doesn't scale infinitely. To do this right, I keep my client list small. If there's no room, you'll go on a waitlist — or I'll tell you this isn't the right fit.",
  },
  whoFor: {
    title: 'Who This Is For',
    leftTitle: 'This Is For You If',
    leftIcon: 'solar:check-read-linear',
    leftItems: [
      { text: "You're tired of managing the people who manage your digital" },
      { text: 'You want one person accountable, not a team to coordinate' },
      { text: "You'd rather approve than build" },
      { text: 'You value your time more than control' },
    ],
    rightTitle: "This Isn't For You If",
    rightIcon: 'solar:close-circle-linear',
    rightItems: [
      { text: 'You want to stay hands-on' },
      { text: 'You need a team of specialists' },
      { text: 'You want hourly billing and itemized invoices' },
      { text: "You're looking for the cheapest option" },
    ],
  },
  afterBook: {
    title: 'After You Book',
    text: "We talk for 30 minutes. I learn what's draining your time. If it's a fit, I tell you exactly what I'd take over and what it costs. No proposals. No follow-up sequences. Just a clear answer.",
  },
  cta: {
    headline: 'Ready to hand it off?',
    ctaText: 'Book a Call',
    ctaUrl: 'https://calendly.com/onlinenexusmarketing/strategy-meeting',
    tagline: 'Get in. Arrive.',
  },
  footer: {
    logoUrl: 'https://res.cloudinary.com/dhs9d8tou/image/upload/v1769829242/onmlogo_bhcbxa.png',
    tagline: 'Get in. Arrive.',
  },
};
---

<BaseLayout title={pageContent.seo.title} description={pageContent.seo.description}>
  
  <Navigation currentPath="/about" />

  <PageHero
    headline={pageContent.hero.headline}
    subheadline={pageContent.hero.subheadline}
    ctaText={pageContent.hero.ctaText}
    ctaUrl={pageContent.hero.ctaUrl}
    ctaExternal={true}
  />

  <TextSection
    title="The Reality You're Living"
    text={pageContent.reality.text}
  />

  <FeatureCardsGrid
    title={pageContent.howWeWork.title}
    items={pageContent.howWeWork.cards}
    variant="dark"
  />

  <AboutPhoto
    name={pageContent.about.name}
    imageUrl={pageContent.about.imageUrl}
    paragraphs={pageContent.about.paragraphs}
    imagePosition="left"
    grayscale={true}
  />

  <ResumeSection
    label={pageContent.resume.label}
    headline={pageContent.resume.headline}
    subheadline={pageContent.resume.subheadline}
    leftTitle={pageContent.resume.leftTitle}
    leftItems={pageContent.resume.leftItems}
    rightTitle={pageContent.resume.rightTitle}
    rightItems={pageContent.resume.rightItems}
  />

  <LimitedCapacity
    headline={pageContent.capacity.headline}
    text={pageContent.capacity.text}
  />

  <TwoColumnComparison
    title={pageContent.whoFor.title}
    leftTitle={pageContent.whoFor.leftTitle}
    leftIcon={pageContent.whoFor.leftIcon}
    leftItems={pageContent.whoFor.leftItems}
    leftIconBg="light"
    rightTitle={pageContent.whoFor.rightTitle}
    rightIcon={pageContent.whoFor.rightIcon}
    rightItems={pageContent.whoFor.rightItems}
    rightIconBg="light"
    variant="dark"
  />

  <TextSection
    title={pageContent.afterBook.title}
    text={pageContent.afterBook.text}
  />

  <FinalCTA
    headline={pageContent.cta.headline}
    ctaText={pageContent.cta.ctaText}
    ctaUrl={pageContent.cta.ctaUrl}
    ctaExternal={true}
    tagline={pageContent.cta.tagline}
    variant="light"
  />

  <SiteFooter
    logoUrl={pageContent.footer.logoUrl}
    tagline={pageContent.footer.tagline}
  />
</BaseLayout>
